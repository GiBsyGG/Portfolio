---
const navItems = [
  {
    name: 'Sobre mi',
    url: '#about'
  },
  {
    name: 'Proyectos',
    url: '#projects'
  },
  {
    name: 'Contacto',
    url: '#contact'
  }]
---

<nav id="nav">
  <ul>
    {navItems.map(item => (
      <li><a href={item.url}>{item.name}</a></li>
      ))}
  </ul>
</nav>

<style>
  nav {
    width: 100%;
    height: fit-content;
    color: var(--white-light);
    text-align: center;
    padding: 12px 0;
    display: flex;
    justify-content: center;
  }

  nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: space-around;
    width: 40%;
    align-self: center;
  }

  nav ul li {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 10px;
    font-size: 2rem;
    text-align: center;
  }

  a {
    color: var(--white-light);
    text-decoration: none;
    background: 
      linear-gradient(to right, var(--background-color), var(--background-color)),
      linear-gradient(to right, var(--secondary-color), var(--secondary-color), var(--secondary-color));
    background-size: 100% 0.15em, 0 0.15em;
    background-position: 100% 100%, 0 100%;
    background-repeat: no-repeat;
    transition: color, background-size;
    transition-duration:  400ms;
}

  a:hover,
  a:focus {
    color: var(--secondary-color);
    background-size: 0 0.15em, 100% 0.15em;
  }

  @media screen and (max-width: 768px){
    nav ul {
      width: 80%;
    }
  }

  @media screen and (max-width: 374px){
    nav ul {
      width: 100%;
    }
  }
</style>