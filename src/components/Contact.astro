---
import EmailItem from "./EmailItem.astro"
import FindmeItem from "./FindmeItem.astro"
---

<section id="contact">
  <h1>Contacto</h1>
  <div class="contact_container">
    <EmailItem />
    <FindmeItem />
  </div>
</section>


<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: center;
  }

  h1{
      display: inline-block;
      width: 240px;
      font-size: 5.2rem;
      font-weight: 600;
      background:linear-gradient(to right, var(--primary-color), var(--primary-color));
      background-size: 80% 0.4em;
      background-position: right 120% bottom 4%;
      background-repeat: no-repeat;
      text-align: end;
  }

  .contact_container {
    display: flex;
    align-items: start;
    justify-content: space-around;
    gap: 2rem;
    margin-top: 2rem;
    width: 100%;
  }

  @media (max-width: 768px) {
    .contact_container {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 374px) {
    h1 {
      background-size: 60% 0.4em;
      background-position: right 50% bottom 4%;
      width: 100%;
      text-align: center;
    }
  }
</style>