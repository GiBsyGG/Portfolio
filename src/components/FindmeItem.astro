---
import { FaGithub, FaLinkedin } from "react-icons/fa6";

const items = [
  {
    title: "GitHub",
    icon: FaGithub,
    link: "https://github.com/GiBsyGG"
  },
  {
    title: "LinkedIn",
    icon: FaLinkedin,
    link: "https://www.linkedin.com/in/juan-camilo-valencia-hincapie-a13161234/"
  }
]

---
<div>
  <h1>
    Encu√©ntrame en
  </h1>
  <div class="items_container">
    {items.map((item) => (
      <a href={item.link} target="_blank" rel="noopener noreferrer">
        <div class="btn_contact">
          <item.icon size="4rem" className="btn_icon" />
          <p>{item.title}</p>
        </div>
      </a>
    ))}
  </div>
</div>

<style>

  h1 {
    font-size: 2.8rem;
    color: var(--white-light);
    letter-spacing: 1.2px;
    margin-top: 0;
    text-align: start;
    width: 100%;
  }

  a {
    text-decoration: none;
    cursor: pointer;
  }

  .items_container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    margin-top: 10px;
  }

  .btn_contact {
    display: flex;
    align-items: center;
    justify-content: space-around;
    color: var(--white-light);
    transition: all 0.5s;
    width: 100%;
    height: 56px;
    background:linear-gradient(to right, var(--white-light), var(--white-light));
    background-size: 100% 0.4em;
    background-position: bottom;
    background-repeat: no-repeat;
  }

  .btn_contact:hover {
    background-size: 100% 100%;
    color: var(--background-color);
  }

  p {
    font-size: 2rem;
    font-weight: 600;
  }

</style>

